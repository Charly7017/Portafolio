@page
@model Portafolio.Pages.ProjectsModel

@{
    ViewData["Title"] = "Proyectos";
}


<ul class="nav nav-pills nav-fill mb-3 mt-3">
    <li style="background-color:#0d6efd" class="nav-item personalProjects">
        <a class="nav-link">Proyectos personales</a>
    </li>
    <li class="nav-item projectsInCompanies">
        <a class="nav-link">Proyectos en empresas</a>
    </li>
</ul>


<section id="projects" class="projects p-4">
    <div class="container">
        <h1 class="text-center mb-4">Proyectos personales</h1>
        <div class="row">
            <div class="col-md-3 col-lg-4 mb-4">
                <div class="card bg-light text-dark  shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-uppercase">CollabCode: Real-time code editor</h5>
                        <p class="card-text">Editor de código colaborativo en tiempo real con integración de WebSocket y gestión adaptable de pestañas.</p>
                        <div class="d-flex justify-content-between  mb-2">
                            <span class="badge bg-success">MongoDB</span>
                            <span class="badge bg-success">React</span>
                            <span class="badge bg-success">Node.js</span>
                            <span class="badge bg-success">Socket.io</span>
                        </div>
                        <a href="#" class="btn btn-primary me-2">Live</a>
                        <a href="#" class="btn">GitHub</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script>
        const personalProjects = $(".personalProjects")
        const projectsInCompanies = $(".projectsInCompanies")


        personalProjects.click(function () {

        });


        projectsInCompanies.click(function () {
            projectsInCompanies.children().css("color", "white")
            projectsInCompanies.css("background-color", "#0d6efd")
            personalProjects.children().css("color", "#0d6efd")
            personalProjects.css("background-color", "white")
        });







    </script>
}