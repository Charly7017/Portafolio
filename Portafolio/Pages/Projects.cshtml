@page
@model Portafolio.Pages.ProjectsModel

@{
    ViewData["Title"] = "Proyectos";
    Layout = "";
    var cultureTag = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Projects.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <section class="projects p-4">
        <div class="container text-center position-relative">

            <a href="/Index" id="projectsContainer" data-projects-title="@Localizer["ProjectsTitle"]" class="backToIndex position-absolute start-0">@Localizer["GoBackTxt"]</a>


            <ul class="navbar-nav position-absolute end-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white h4 rounded px-3 py-2" href="#"
                       id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @Thread.CurrentThread.CurrentUICulture.Name
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/Lang?culture=en">English</a></li>
                        <li><a class="dropdown-item" href="/Lang?culture=es">Español</a></li>
                    </ul>
                </li>
            </ul>


            <h1 class="mb-3 reveal-projects-title">@Localizer["ProjectsTitle"]</h1>
            <nav class="navigation mx-auto reveal-projects-nav">
                <ul class="nav-list">
                    <li class="active btnBringAllProjects">
                        <a href="#">
                            @Localizer["AllProjectsTxt"]
                        </a>
                    </li>
                    <li class="btnBringWebProjects">
                        <a href="#web">
                            @Localizer["WebTxt"]
                        </a>
                    </li>
                    <li class="btnBringMobileProjects">
                        <a href="#mobile">
                            @Localizer["MobileTxt"]
                        </a>
                    </li>
                    <li class="btnBringMiniProjects">
                        <a href="#mini">
                            @Localizer["MiniProjectsTxt"]
                        </a>
                    </li> 
                    <div class="active-bar"></div>
                </ul>
            </nav>

            <div id="results" class="row row-cols-1 row-cols-lg-2 mb-4 reveal-projects-row gy-5 mt-4 text-white">
                @foreach (var project in Model.Projects)
                {
                    <div class="col reveal-project">
                        <div class="cardProjects">
                            <img src="@project.ImageUrl" alt="Project Image">
                            <h5>@project.Name</h5>
                            <p>@project.Description</p>
                            <p>@project.Technologies</p>
                            <a target="_blank" class="btnGithub" href="@project.GithubLink"><i class="bi bi-github"></i></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Projects.js" asp-append-version="true"></script>

</body>
</html>




