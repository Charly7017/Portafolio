@page
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<IndexModel> localizer

@{
    ViewData["Title"] = "Mi portafolio";
}

<section class="hero p-4">
    <div class="container text-center text-white">
        <h1 class="hero-title">Carlos Santamaría</h1>
        <h2 class="hero-subtitle">@Localizer["SoftwareDeveloper"]</h2>
        <p class="hero-description">
            @Localizer["Phrase"]
        </p>
        <div class="contact-info gap-4 d-flex justify-content-center mt-4 mb-4 reveal-contact">
            <a class="icon-link" target="_blank" href="https://www.linkedin.com/in/carlos-santamaria-solano-83703a1a6/">
                <i class="bi bi-linkedin"></i>
            </a>
            <a class="icon-link" target="_blank" href="https://github.com/Charly7017">
                <i class="bi bi-github"></i>
            </a>
            <a class="icon-link" target="_blank" href="mailto:charlysanta936@gmail.com">
                <i class="bi bi-envelope"></i>
            </a>
            <a class="icon-link" target="_blank" href="https://drive.google.com/drive/folders/10ooBDXO64hIsIK3dW63raIiK89WIxxJC?usp=drive_link">
                <i class="bi bi-file-earmark-person"></i>
            </a>
        </div>
    </div>
</section>

<section id="aboutMe" class="about-me p-4 text-white">
    <div class="about-me__container container">
        <h2 class="about-me__title text-center reveal-title">@Localizer["MeetMeTitle"]</h2>
        <p class="about-me__description mx-auto lead reveal-description">
            @Localizer["MeetDescription"]
        </p>
    </div>
</section>

<section id="experience" class="experience p-4 text-white">
    <div class="container">
        <h2 class="text-center mb-4 reveal-experience-title">@Localizer["Experience"]</h2>
        <div class="timeline">
            <!-- Desarrollador Jr -->
            <div class="timeline-item reveal-experience">
                <div class="timeline-content p-4">
                    <h3>@Localizer["JrDeveloper"]</h3>
                    <p><strong>SHARKSIA</strong> • @Localizer["AugustMonth"] 2024 - @Localizer["NowTime"]</p>
                    <p>
                        @Localizer["SharksiaExperience"]
                    </p>
                </div>
            </div>
            <!-- Prácticante en TAMSA -->
            <div class="timeline-item reveal-experience">
                <div class="timeline-content p-4">
                    <h3>@Localizer["Intern"]</h3>
                    <p><strong>Tubos de Acero de México SA (TAMSA)</strong> • @Localizer["AugustMonth"] 2023 - @Localizer["JulyMonth"] 2024</p>
                    <p>@Localizer["TamsaExperience"]</p>
                </div>
            </div>
            <!-- Prácticante en Ehecatl -->
            <div class="timeline-item reveal-experience">
                <div class="timeline-content p-4">
                    <h3>@Localizer["Intern"]</h3>
                    <p><strong>Servicios de Software Ehecatl</strong> • @Localizer["JuneMonth"] 2022 - @Localizer["SeptemberMonth"] 2022</p>
                    <p>
                        @Localizer["EhecatlExperience"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="highlightedProjects" class="highlightedProjects p-4 text-white">
    <div class="container">
        <h2 class="text-center mb-4 reveal-projects-title">@Localizer["ProjectsTitle"]</h2>
        <div class="row row-cols-1 row-cols-lg-3 mb-4 reveal-projects-row gy-3">
            <div class="col">
                <div class="cardProjects reveal-card">
                    <img src="/Images/BookingSystemImage.png" alt="Project Image">
                    <h5>@Localizer["BookingSystem"]</h5>
                </div>
            </div>
            <div class="col">
                <div class="cardProjects reveal-card">
                    <img src="/Images/TaskManagerImage.png" alt="Project Image">
                    <h5>@Localizer["TaskManager"]</h5>
                </div>
            </div>
            <div class="col">
                <div class="cardProjects reveal-card">
                    <img src="/Images/accountspayablesystemImage.png" alt="Project Image">
                    <h5>@Localizer["PayTrack"]</h5>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <a href="/Projects" class="btnProjects reveal-btn">@Localizer["SeeMoreProjects"]</a>
        </div>
    </div>
</section>

<section id="skills" class="p-4 skills">
    <div class="container text-center text-white">
        <h2 class="mb-3 reveal-skills-title">@Localizer["SkillsTitle"]</h2>

        <h3 class="mb-4 reveal-skills-section">Frontend</h3>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3 reveal-skills-items">
            <div class="col">
                <img src="~/Images/html-icon.svg" />
                <p>HTML</p>
            </div>
            <div class="col">
                <img src="~/Images/css-icon.svg" />
                <p>CSS</p>
            </div>
            <div class="col">
                <img src="~/Images/js-icon.svg" />
                <p>Javascript</p>
            </div>
            <div class="col">
                <img src="~/Images/jquery.icon.svg" />
                <p>jQuery</p>
            </div>
            <div class="col">
                <img src="~/Images/boostrap-icon.svg" />
                <p>Bootstrap</p>
            </div>
        </div>
        <hr />
        <h3 class="mb-4 reveal-skills-section">Backend</h3>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3 reveal-skills-items">
            <div class="col">
                <img src="~/Images/csharp-icon.svg" />
                <p>C#</p>
            </div>
            <div class="col">
                <img src="~/Images/dotnetwhite.svg" />
                <p>.NET</p>
            </div>
            <div class="col">
                <img src="~/Images/aspdotnetwhite.svg"/>
                <p>ASP.NET</p>
            </div>
            <div class="col">
                <img src="~/Images/sql-icon.svg" />
                <p>SQL</p>
            </div>
        </div>
        <hr />
        <h3 class="mb-4 reveal-skills-section">@Localizer["Tools"]</h3>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3 reveal-skills-items">
            <div class="col">
                <img src="~/Images/git-icon.svg" />
                <p>Git</p>
            </div>
            <div class="col">
                <img src="~/Images/githubwhite.svg" />
                <p>GitHub</p>
            </div>
            <div class="col">
                <img src="~/Images/figma-icon.svg" />
                <p>Figma</p>
            </div>
            <div class="col">
                <img src="~/Images/azuredevops-icon.svg" />
                <p>Azure DevOps</p>
            </div>
            <div class="col">
                <img src="~/Images/postman-icon.svg" />
                <p>Postman</p>
            </div>
        </div>
        <hr />
        <h3 class="mb-4 reveal-skills-section">@Localizer["OtherSkills"]</h3>
        <div class="row row-cols-2 reveal-skills-items">
            <div class="col">
                <img src="~/Images/android-icon.svg" />
                <p>Android</p>
            </div>
            <div class="col">
                <img src="~/Images/kotlin-icon.svg" />
                <p>Kotlin</p>
            </div>
        </div>
    </div>
</section>

<footer id="contact" class="footer text-white d-flex align-items-center justify-content-between justify-content-md-around p-4">
    <h2 class="mb-3"><i class="bi bi-c-circle"></i> 2024 | Carlos Santamaría</h2>
    <a href="#" class="p-3"><i class="bi bi-arrow-up"></i></a>
</footer>